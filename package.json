{
  "type": "commonjs",
  "name": "reposcrapper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "dev": "nodemon src/backend/index.ts",
    "build": "concurrently \"react-scripts build\" \"tsc\"",
    "copyGraphql": "copyfiles --error src/backend/api/schemas/*.graphql dist",
    "postbuild": "npm run copyGraphql",
    "lint": "eslint --fix src src/test",
    "test": "npm run test:src && npm run test:build",
    "test:src": "jest --config=jest.config.js",
    "test:build": "jest --config=jest.config.build.js --detectOpenHandles --forceExit",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@apollo/client": "^3.9.6",
    "@apollo/server": "^4.10.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@octokit/graphql-schema": "^14.58.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.18.80",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.2",
    "octokit": "^3.1.2",
    "randomstring": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-scripts": "5.0.1",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/randomstring": "^1.1.12",
    "@types/react": "^18.2.64",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
